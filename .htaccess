#DON'T SHOW DIRECTORY LISTINGS
Options -Indexes

ErrorDocument 400 /cloudstorage/pages/error.php
ErrorDocument 401 /cloudstorage/pages/error.php
ErrorDocument 403 /cloudstorage/pages/error.php
ErrorDocument 404 /cloudstorage/pages/error.php
ErrorDocument 405 /cloudstorage/pages/error.php

RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

RewriteRule ^$ pages/login.php
RewriteRule ^home$ pages/login.php
RewriteRule ^login$ pages/login.php
RewriteRule ^logout$ php/ajax/logout_submit.php
RewriteRule ^documents$ pages/documents.php
RewriteRule ^shares$ pages/shares.php

DirectoryIndex index.php

<FilesMatch "\.(ini|psd|log|sh)$">
Order allow,deny
Deny from all
</FilesMatch>
